{
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog"
{{- with index .Vars "semantic_release" -}}
{{- with index . "exec" -}},
    ["@semantic-release/exec", {{ . | toJson }}]
{{- end -}}
{{- with index . "github" -}},
    ["@semantic-release/github", {{ . | toJson }}]
{{- end }}
{{- if not (index . "github") }},
    "@semantic-release/github"
{{- end }}
{{- end }}
  ]
}